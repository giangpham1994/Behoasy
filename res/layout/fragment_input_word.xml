<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical" >

            <edu.fpoly.edict.TouchHighlightImageButton
                android:id="@+id/thumb_quacam_1"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:layout_marginRight="1dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/quacam" />

            <edu.fpoly.edict.TouchHighlightImageButton
                android:id="@+id/thumb_quadudu_1"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/quadudu" />
            <edu.fpoly.edict.TouchHighlightImageButton
                android:id="@+id/thumb_quale_1"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/quale" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical" >

            <edu.fpoly.edict.TouchHighlightImageButton
                android:id="@+id/thumb_quatao_1"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:layout_marginRight="1dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/quatao1" />

            <edu.fpoly.edict.TouchHighlightImageButton
                android:id="@+id/thumb_catim_1"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/catim1" />
            <edu.fpoly.edict.TouchHighlightImageButton
                android:id="@+id/thumb_quaot_1"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/quaot1" />
            <edu.fpoly.edict.TouchHighlightImageButton
                android:id="@+id/thumb_quatao_2"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:layout_marginRight="1dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/catim1" />
        </LinearLayout>
    </LinearLayout>
    

    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:contentDescription="expanded image" />
    

</FrameLayout>
